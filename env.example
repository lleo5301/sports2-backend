# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=collegiate_baseball
DB_USER=postgres
DB_PASSWORD=your_database_password_here

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# External APIs (for future integration)
TRACKMAN_API_URL=
TRACKMAN_API_KEY=
D1BASEBALL_API_URL=
D1BASEBALL_API_KEY=
CONFERENCE_API_URL=
CONFERENCE_API_KEY=

# Multi-tenant Configuration
DEFAULT_TEAM_ID=1

# OAuth Configuration
# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# Apple OAuth
APPLE_CLIENT_ID=your_apple_client_id
APPLE_TEAM_ID=your_apple_team_id
APPLE_KEY_ID=your_apple_key_id
APPLE_PRIVATE_KEY_PATH=path/to/your/apple/private/key.p8
APPLE_CALLBACK_URL=http://localhost:5000/api/auth/apple/callback

# Frontend URL for OAuth redirects
FRONTEND_URL=http://localhost:3000

# Logging
LOG_LEVEL=info 
# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_user@example.com
SMTP_PASS=your_smtp_password_here
SMTP_FROM="Your Team Name" <noreply@example.com>
