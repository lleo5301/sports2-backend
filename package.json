{
  "name": "collegiate-baseball-backend",
  "version": "1.0.0",
  "description": "Backend API for Collegiate Baseball Scouting and Team Management Platform",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "build": "echo 'No build step required for Node.js'",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "jest --coverage",
    "test:api": "mocha test-api-routes.js --timeout 30000",
    "test:all": "npm test & npm run test:api & wait",
    "test:db:start": "docker compose -f docker-compose.test.yml up -d && sleep 3",
    "test:db:stop": "docker compose -f docker-compose.test.yml down",
    "test:docker": "npm run test:db:start && NODE_ENV=test npm run db:migrate && npm test; npm run test:db:stop",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:seed": "npx sequelize-cli db:seed:all",
    "db:reset": "npx sequelize-cli db:drop && npx sequelize-cli db:create && npm run db:migrate && npm run db:seed",
    "db:cleanup-tokens": "node src/utils/cleanupExpiredTokens.js",
    "generate:jwt-secret": "node ../scripts/generate-jwt-secret.js",
    "dev:setup": "./scripts/dev-test.sh setup",
    "dev:start": "./scripts/dev-test.sh start",
    "dev:start:docker": "./scripts/dev-test.sh start:docker",
    "dev:test": "./scripts/dev-test.sh test",
    "dev:test:unit": "./scripts/dev-test.sh test --test-type unit",
    "dev:test:e2e": "./scripts/dev-test.sh test --test-type e2e",
    "dev:cleanup": "./scripts/dev-test.sh cleanup",
    "dev:status": "./scripts/dev-test.sh status"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csrf-csrf": "^3.0.6",
    "dotenv": "^16.6.1",
    "express": "^4.22.1",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.3.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.0",
    "nodemailer": "^7.0.12",
    "passport": "^0.7.0",
    "passport-apple": "^2.0.2",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.35.1",
    "sequelize-cli": "^6.6.2"
  },
  "devDependencies": {
    "axios-cookiejar-support": "^6.0.5",
    "chai": "^4.3.7",
    "eslint": "^8.53.0",
    "eslint-plugin-node": "^11.1.0",
    "globals": "^13.24.0",
    "jest": "^29.7.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "tough-cookie": "^6.0.0"
  },
  "engines": {
    "node": ">=24.13.0"
  }
}
